{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "ES5",
      "module": "CommonJs",
      "noImplicitAny": true,
      "noEmitOnError": false,
      "removeComments": false,
      "preserveConstEnums": true,
      "strictNullChecks": true,
      "sourceMap": false,
      "experimentalDecorators": true,
      "declaration": true
    },
    "exclude": [
      "node_modules/**"
    ]
}
